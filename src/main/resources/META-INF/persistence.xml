<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="taskflowPU">
        <!-- Declarar todas as entidades -->
        <class>com.taskflow.Entity.UserEntity</class>
        <class>com.taskflow.Entity.TaskEntity</class>

        <properties>
            <!-- Cria/atualiza tabelas automaticamente -->
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Configurações de conexão com PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>